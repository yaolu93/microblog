{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Flask (web)",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/home/microblog"
        }
      ]
    },
    {
      "name": "Attach to RQ worker",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5679
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}",
          "remoteRoot": "/home/microblog"
        }
      ]
    }
  ]
}
